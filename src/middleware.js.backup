// src/middleware.js
import { createMiddlewareClient } from '@supabase/auth-helpers-nextjs';
import { NextResponse } from 'next/server';

export async function middleware(req) {
  const res = NextResponse.next();
  const supabase = createMiddlewareClient({ req, res });

  const {
    data: { session },
  } = await supabase.auth.getSession();

  const pathname = req.nextUrl.pathname;

  // Define public routes (no auth required)
  const publicRoutes = ['/login', '/signup', '/auth/callback', '/forgot-password', '/reset-password'];
  const isPublicRoute = publicRoutes.some(route => pathname.startsWith(route));

  // Define protected routes (require auth)
  const protectedRoutes = ['/musician', '/client', '/admin', '/booking', '/payment', '/kyc', '/tracking', '/profile', '/settings', '/update-profile', '/events', '/chat'];
  const isProtectedRoute = protectedRoutes.some(route => pathname.startsWith(route));

  // Redirect to login if accessing protected route without session
  if (!session && isProtectedRoute) {
    const redirectUrl = req.nextUrl.clone();
    redirectUrl.pathname = '/login';
    redirectUrl.searchParams.set('redirectedFrom', pathname);
    return NextResponse.redirect(redirectUrl);
  }

  // Redirect to appropriate dashboard if accessing auth pages with active session
  if (session && (pathname === '/login' || pathname === '/signup')) {
    try {
      const { data: profile } = await supabase
        .from('user_profiles')
        .select('role, is_admin, is_support')
        .eq('id', session.user.id)
        .single();

      const redirectUrl = req.nextUrl.clone();
      
      if (profile?.is_admin || profile?.role === 'ADMIN') {
        redirectUrl.pathname = '/admin/dashboard';
      } else if (profile?.is_support || profile?.role === 'SUPPORT') {
        redirectUrl.pathname = '/admin/dashboard';
      } else if (profile?.role === 'MUSICIAN') {
        redirectUrl.pathname = '/musician/dashboard';
      } else {
        redirectUrl.pathname = '/client/home';
      }
      
      return NextResponse.redirect(redirectUrl);
    } catch (error) {
      console.error('Middleware profile fetch error:', error);
    }
  }

  return res;
}

export const config = {
  matcher: [
    /*
     * Match all request paths except:
     * - _next/static (static files)
     * - _next/image (image optimization files)
     * - favicon.ico (favicon file)
     * - public files (images, etc.)
     */
    '/((?!_next/static|_next/image|favicon.ico|.*\\.(?:svg|png|jpg|jpeg|gif|webp|ico)$).*)',
  ],
};